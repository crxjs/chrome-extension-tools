{
  "name": "crxjs-monorepo",
  "private": "true",
  "packageManager": "bun@1.2.15",
  "keywords": [
    "rollup-plugin",
    "vite-plugin",
    "chrome",
    "chrome-extension",
    "extension",
    "webext",
    "webextension",
    "browser",
    "browser-extension"
  ],
  "homepage": "https://crxjs.dev",
  "scripts": {
    "build:vite-plugin": "bun run --cwd packages/vite-plugin build",
    "play": "bun run play:vanilla",
    "play:react": "bun run --cwd playgrounds/react dev",
    "play:solid": "bun run --cwd playgrounds/solid dev",
    "play:svelte": "bun run --cwd playgrounds/svelte dev",
    "play:vanilla": "bun run --cwd playgrounds/vanilla dev",
    "play:vue": "bun run --cwd playgrounds/vue dev",
    "release": "bun run --filter \"*plugin*\" build && changeset publish"
  },
  "dependencies": {
    "@changesets/cli": "^2.22.0",
    "@typescript-eslint/eslint-plugin": "^5.20.0",
    "@typescript-eslint/parser": "^5.20.0",
    "eslint": "8.43.0",
    "eslint-plugin-react": "^7.29.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "prettier-plugin-jsdoc": "0.4.2",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "vitest": "0.24.3"
  },
  "workspaces": [
    "packages/**",
    "playgrounds/**",
    "tests/**",
    "!**/test/**"
  ]
}
