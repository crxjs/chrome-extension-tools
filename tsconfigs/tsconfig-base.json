{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["DOM", "es2020"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "rootDir": "..",
    "baseUrl": "..",
    "resolveJsonModule": true,
    "paths": {
      "$src": ["src/index.ts"],
      "$src/*": ["src/*"],
      "$test": ["test/index.ts"],
      "$test/*": ["test/*"]
    },
    "noErrorTruncation": true
  }
}
