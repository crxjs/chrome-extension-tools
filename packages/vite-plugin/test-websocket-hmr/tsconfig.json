{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "vite/client",
            "chrome"
        ],
        "skipLibCheck": true
    },
    "include": [
        "src"
    ]
}